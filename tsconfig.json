{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*",
        "./node_modules/@v4fire/core/src/*"
      ],

      "@v4fire/core/*": [
        "./node_modules/@v4fire/core/src/*"
      ]
    },

    "downlevelIteration": true,
    "lib": ["dom", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "experimentalDecorators": true
  }
}
