{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "downlevelIteration": true,
    "noLib": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "experimentalDecorators": true,
    "paths": {
      "*": [
        "./src/*",
        "./node_modules/@v4fire/core/src/*"
      ],
      "@v4fire/core/*": [
        "./node_modules/@v4fire/core/src/*"
      ]
    }
  }
}