@import "super/i-message/i-message.styl"

$p = {
	lockHelpers: false
	sideBarTransition: EASING_DURATION linear
	overlayTansition: EASING_DURATION ease-in
}

b-side-bar extends i-message
	fixed top 0 left 0
	zIndex(overall)
	transform translateX(-100%)

	if $p.sideBarTransition
		transition transform $p.sideBarTransition

	&
	&__root-wrapper
		size 100%

	&_opened_true
		transform translateX(0)

	&__over-wrapper
		if $p.overlayBg
			background $p.overlayBg

			if $p.overlayTansition
				transition background $p.overlayTansition

	&_opened_true &__over-wrapper
		display block
