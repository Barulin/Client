@import "super/i-block/i-block.styl"

$p = {
	activeColor: #FFF,
	activeBackgroundColor: #222C3C,
	hoverBackgroundColor: #F7F7F7,
	color: #3A3A3A
}

b-paging extends i-block
	display inline-block
	padding 0.4em 0
	user-select none

	&__cell
		display inline-block
		margin 0.1em
		font-weight 700
		font-size 1.2em
		color $p.color
		border-radius 3px
		vertical-align middle
		cursor pointer
		transition 0.1s ease-in background-color

		&:hover
			background-color $p.hoverBackgroundColor

	&__bias-right
		display inline-block
		margin-right -1em

	&__bias-left
		display inline-block
		margin-left -1em

	&__page
		padding 0.3em 0.4em 0.25em

	&__state
		&_disabled_true
			opacity 0.6
			cursor default
			pointer-events none

		&_active_true
			color $p.activeColor
			background-color $p.activeBackgroundColor

			&:hover
				background-color $p.activeBackgroundColor

	&__self-select
		display inline-block
		width 7em
