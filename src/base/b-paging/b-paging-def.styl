$p = {
	activeColor: #FFF
	activeBackgroundColor: #222C3C
	hoverBackgroundColor: #F7F7F7
	color: #3A3A3A
}

b-paging
	padding 0.4em 0

	&__cell
		margin 0.1em
		font-weight 700
		font-size 1em
		color $p.color
		border-radius 3px
		transition 0.1s ease-in background-color

		&:hover
			background-color $p.hoverBackgroundColor

		.b-icon
			font-size 0.75em

	&__bias-right
		margin-right -0.5em

	&__bias-left
		margin-left -0.5em

	&__page
		padding 0.3em 0.4em 0.25em

	&__state
		&_active_true
			color $p.activeColor
			background-color $p.activeBackgroundColor

			&:hover
				background-color $p.activeBackgroundColor

		&_disabled_true
			opacity 0.6

	&__self-select
		width 7em
