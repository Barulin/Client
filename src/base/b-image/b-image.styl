@import "super/i-block/i-block.styl"

$p = {

}

b-image extends i-block
	&__root-wrapper
		size 100%

	&__overlay
	&__damaged
		position absolute
		size 100%
		pointer-events none

	&__overlay
		opacity 0

	&__damaged
		display none

	&_error_true &__damaged
		display flex
		align-items center
		justify-content center
		z-index 2

	&_disabled_true &__overlay
	&_loading_true &__overlay
		opacity 1

	&__img
		width 100%
