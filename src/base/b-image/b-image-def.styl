$p = {
  overlayBackgroundColor: #F1F1F1,
  damagedColor: #CACACA
}

b-image
	&__overlay
		opacity 0
		transition BASE_EASING_DURATION ease-in opacity
		background-color $p.overlayBackgroundColor

	&_error_true &__damaged
		z-index 2
		display flex
		align-items center
		justify-content center
		color $p.damagedColor

	&__damaged
		.b-icon
		font-size 2.5em
