@import "super/i-data/i-data.styl"

b-chart extends i-data
	display flex
	flex 1
	width 100%
	min-height @width
	user-select none

	&__root-wrapper
		display flex
		flex-direction column
		align-items center
		justify-content center
		position relative
		width 100%

	&__container
		absolute top 0 bottom 0
		width 100%
		height @width

	&__empty
		user-select none
		cursor default
