$p = {
	focusedBorderColor: #444
}

i-block
	if $p.lockHelpers
		&_disabled_true &__root-wrapper,
		&_progress_true &__root-wrapper
			opacity 0.8

	&_size
		for $el in (xxs 0.65) (xs 0.75) (s 0.9) (m 1) (l 1.15) (xl 1.35) (xxl 1.75)
			&_{$el[0]}
				font-size $el[1]rem
