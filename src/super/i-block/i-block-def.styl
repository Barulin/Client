$p = {
	focusedBorderColor: #444
	sizes: SIZES
}

i-block
	if $p.lockHelpers
		&_disabled_true &__root-wrapper
		&_progress_true &__root-wrapper
			opacity 0.8

	&_size
		for $el in $p.sizes
			&_{$el[0]}
				font-size $el[1]rem
