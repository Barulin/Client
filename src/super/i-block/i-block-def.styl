$p = {
	focusedBorderColor: #444
	sizes: {
		table: SIZES
		units: rem
	}
}

i-block
	if $p.lockHelpers
		&_disabled_true &__root-wrapper
		&_progress_true &__root-wrapper
			opacity 0.8

	&_size
		for $key, $value in $p.sizes.table
			&_{$key}
				font-size "%s%s" % ($value $p.sizes.units)
