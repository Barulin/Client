@import "super/i-base/i-base.styl"

$p = {
	lockHelpers: false
}

i-block extends i-base
	position relative
	box-sizing border-box

	&__root-wrapper
		position @position
		box-sizing @box-sizing

	&_width
		&_full
			width 100%

		&_auto
			width auto

	&_hidden_true
		display none !important

	if $p.lockHelpers
		&_disabled_true,
		&_progress_true
			pointer-events none

		&_disabled_true &__over-wrapper,
		&_progress_true &__over-wrapper
			display block

		&_disabled_true &__root-wrapper,
		&_progress_true &__root-wrapper
			cursor default
			opacity 0.8

	&_progress_true &__progress
		display block

	&__root-wrapper
		display block

	&__over-wrapper
		absolute top 0 left 0
		z-index 10
		display none
		width 100%
		height @width

	&__progress
		display none
