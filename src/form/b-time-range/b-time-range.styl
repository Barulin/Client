@import "super/i-input/i-input.styl"

$p = {
	color: #FFF,
	backgroundColor: #079888,
	dropdownHelpers: true
}

b-time-range extends i-input
	display inline-block
	color $p.color

	&_width_full &__value
		width 100%

	&__value
		padding 0.4em 0.6em
		border 1px dotted transparent
		background $p.backgroundColor
		color currentColor
		text-decoration none
		cursor pointer

		&:hover
			background darken($p.backgroundColor, 5%)

		&:active
			background darken($p.backgroundColor, 7%)
			{$p.onActive}

	&_focused_true &__value
		border-color $p.focusedBorderColor

	&__value,
	&__cell
		display flex
		align-items center
		justify-content center

	&__time,
	&__empty
		width 100%
		white-space nowrap
		font-weight bold
		font-size 0.95em

	&__cell + &__cell
		margin-left 0.3em

	&__pre-icon .b-icon
		font-size 1.5em

	&__clear
		color currentColor
		text-decoration none

		.b-icon
			font-size 1.3em

	&__time span + span
		margin-left 0.2em

	&__label,
	&__sep
		font-weight 300
		font-size 1.1em

	&__label
		padding-right 0.4em

	&__sep
		padding 0 0.2em

	&__form
		display flex
		flex-direction column
		align-items center

	&__controls
		margin-top 1em
		white-space nowrap

	&__button + &__button
		margin-left 0.5em
