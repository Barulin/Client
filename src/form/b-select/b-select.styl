@import "form/b-input/b-input.styl"

$p = {
	dropdownHelpers: true
}

b-select extends b-input
	&_opened_true
		z-index 10000

	&__native
		absolute top 0 left 0
		width 100%
		height 100%
		opacity 0

	&__option
		display block
		white-space nowrap
		cursor pointer

	&__expand
		cursor pointer

	&__dropdown-content-wrapper
		display block
		overflow hidden
		background inherit
